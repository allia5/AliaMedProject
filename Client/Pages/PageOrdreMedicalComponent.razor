@page "/OrdreMidical/{AppointmentId}/{FileId}"
@inherits PageOrdreMedicalComponentBase

@if (ErrorMessage != null)
{
    <ErrorRoutingMessage Message="@ErrorMessage"></ErrorRoutingMessage>
}

@if (SuccessMessage != null)
{
    <CorrectRoutingMessage></CorrectRoutingMessage>
}

@if (isLoading == true)
{
    <WaitComponent />
}


<!-- Modal Add File -->

<div class="modal fade" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalToggleLabel">Prescription</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @for (int k = 0; k <= CountInput; k++)
                {
                    <div class="form-control d-flex">
                        <input class="form-control w-75" @bind="OrderMedicalToAddDro.Prescription.prescriptionLines[k]" type="text" placeholder="Name Of Medicament"> <input class="form-control w-25" type="number" min="0" placeholder="Quantity">
                    </div>
                }
                <div class="form-control">
                    <button class="btn btn-success" style="width:100%;" @onclick="OnAddLine" data-bs-toggle="modal">+ Add Prescription</button>
                </div>
                <div class="mb-3">
                    <label for="formFile" class="form-label">File Docx</label>
                    <InputFile class="form-control" type="file" OnChange="HandleFilePrescriptionSelected" />
                </div>
            </div>
            <div class="modal-footer">

                <button class="btn btn-danger" data-bs-target="#exampleModalToggle2" data-bs-toggle="modal" data-bs-dismiss="modal">Skip</button>
                <button class="btn btn-primary" data-bs-target="#exampleModalToggle2" data-bs-toggle="modal" data-bs-dismiss="modal">Next</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="exampleModalToggle2" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalToggleLabel2">Radio</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <EditForm Model="OrderMedicalToAddDro">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Analyse Instruction:</label>
                        <input type="text" @bind="OrderMedicalToAddDro.RadioToAdd.Instruction" class="form-control" id="recipient-name">
                    </div>
                    <div class="mb-3">
                        <label for="message-text" class="col-form-label">Analyse Description::</label>
                        <textarea class="form-control"  @bind="OrderMedicalToAddDro.RadioToAdd.Description" id="message-text"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="formFile" class="form-label">Default file input example</label>
                        <InputFile class="form-control" type="file" OnChange="HandleFileRadioSelected" />
                    </div>
                </EditForm>

            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" data-bs-target="#exampleModalToggle2" data-bs-toggle="modal" data-bs-dismiss="modal">previous</button>
                <button class="btn btn-danger" data-bs-target="#exampleModalToggle3" data-bs-toggle="modal" data-bs-dismiss="modal">Skip</button>
                <button class="btn btn-primary" data-bs-target="#exampleModalToggle3" data-bs-toggle="modal" data-bs-dismiss="modal">Next</button>
               
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="exampleModalToggle3" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalToggleLabel2">Analyse</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <EditForm Model="OrderMedicalToAddDro">
                    <DataAnnotationsValidator />
                    <ValidationSummary />
                    <div class="mb-3">
                        <label for="recipient-name" class="col-form-label">Analyse Instruction:</label>
                        <input @bind="OrderMedicalToAddDro.AnalyseToAdd.Instruction" type="text" class="form-control" id="recipient-name">
                    </div>
                    <div class="mb-3">
                        <label for="message-text"  class="col-form-label">Analyse Description::</label>
                        <textarea class="form-control" @bind="OrderMedicalToAddDro.AnalyseToAdd.Description" id="message-text"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="formFile" class="form-label">Default file input example</label>
                        <InputFile class="form-control" type="file" OnChange="HandleFileAnalyseSelected" />
                    </div>
                </EditForm>
            </div>
            <div class="modal-footer">

                <button class="btn btn-primary" data-bs-target="#exampleModalToggle3" data-bs-toggle="modal" data-bs-dismiss="modal">previous</button>
                <button class="btn btn-danger" data-bs-target="#exampleModalToggle4" data-bs-toggle="modal" data-bs-dismiss="modal">Skip</button>
                <button class="btn btn-primary" data-bs-target="#exampleModalToggle4" data-bs-toggle="modal" data-bs-dismiss="modal">Next</button>
            </div>
        </div>
    </div>
</div>
<div class="modal fade" id="exampleModalToggle4" aria-hidden="true" aria-labelledby="exampleModalToggleLabel2" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalToggleLabel2">Modal 2</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <EditForm Model="OrderMedicalToAddDro">
                        <DataAnnotationsValidator />
                        <ValidationSummary />
                    <div class="form-floating">
                        <InputSelect class="form-control" @bind-Value="@OrderMedicalToAddDro.Visibility">

                            <option value="1">Private</option>

                            <option value="2"> Public </option>

                        </InputSelect>
                        <label for="floatingPassword">Visibility Ordre Medical</label>
                    </div>
                <div class="mb-3">
                    <label for="message-text" class="col-form-label">Summary:</label>
                    <textarea class="form-control" @bind="OrderMedicalToAddDro.Summary" id="message-text"></textarea>
                </div>
                </EditForm>



            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" @onclick="Done" data-bs-toggle="modal" data-bs-dismiss="modal">Done</button>
            </div>
        </div>
    </div>
</div>


<div class="container">
    <div class="form-control">
        <button class="btn btn-secondary" style="width:100%;" data-bs-toggle="modal" data-bs-target="#exampleModalToggle">+ Add Ordre Medical</button>
    </div>
</div>
