@page "/InformationCabinetMedical"
@inherits InformationCabinetMedicalComponentBase

@if(ErrorMessage != null){
   <ErrorRoutingMessage Message="@ErrorMessage"></ErrorRoutingMessage>
}else if(SuccessMessage != null){
     <CorrectRoutingMessage Message="@SuccessMessage"></CorrectRoutingMessage>
}
@if(IsLoding ==true){
    <WaitComponent />
}
<div class="shadow-lg p-3 mb-5 bg-light rounded">
    <div class="container">
        <div class="row">
            <div class="col-md-4 mx-auto">
                <img src="/SettingsClinic.jpg" class="img-fluid rounded-circle" alt="Photo du propriétaire">
            </div>
            <div class="text-center mx-auto">
                <h3>
                    Clinic settings
                </h3>
            </div>
        </div>

    </div>
</div>

<div class="shadow-lg p-3 mb-5 bg-light rounded">

<EditForm Model="CabinetMedicalInformation" OnValidSubmit="Update">
    <DataAnnotationsValidator />
    <ValidationSummary />
    <div class="container m-auto w-50 ">
        <div class="form-floating mb-3  ">
            <InputText type="text" class="form-control" id="floatingInput" @bind-Value="CabinetMedicalInformation.name" ></InputText>
            <label for="floatingInput">Name Of Cabinet Medical</label>
        </div>
        <div class="form-floating mb-3 ">
            <InputText type="text" class="form-control" @bind-Value="CabinetMedicalInformation.Adress" id="Adress" ></InputText>
            <label for="floatingPassword">Address Cabinet Medical</label>
        </div>
        <div class="form-floating mb-3 ">
            <InputText type="text" class="form-control" @bind-Value="CabinetMedicalInformation.phoneNumber" id="PhoneNumber"></InputText>
            <label for="floatingPassword">Number Phone</label>
        </div>
        <div class="form-floating mb-3 ">
            <InputText type="text" class="form-control" @bind-Value="CabinetMedicalInformation.JobTime" id="JobTime" ></InputText>
            <label for="floatingPassword">Job Time</label>
        </div>
        <div class="form-floating mb-3 ">
            <InputTextArea type="text" class="form-control" @bind-Value="CabinetMedicalInformation.mapAdress" id="floatingPassword" ></InputTextArea>
            <label for="floatingPassword">Address Map</label>
        </div>
        <div class="form-floating mb-3 ">
            
            <InputFile class="form-control" type="file"  OnChange="HandleFileSelected" />
                <label for="fileInput">Upload Image Clinic</label>
        </div>
        <div class="form-floating mb-3 ">
            <InputText type="text" class="form-control" id="floatingPassword" @bind-Value="CabinetMedicalInformation.Services" ></InputText>
            <label for="floatingPassword">Services</label>
        </div>
        <p>Status Of Clinic Is: @CabinetMedicalInformation.Status.ToString()</p>

        <InputSelect class="form-control" @bind-Value="@CabinetMedicalInformation.Status" >

            <option value="1">Open </option>

            <option value="0"> Close </option>

        </InputSelect>


            <button class="btn btn-success mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-fill" viewBox="0 0 16 16">
                    <path d="M12.854.146a.5.5 0 0 0-.707 0L10.5 1.793 14.207 5.5l1.647-1.646a.5.5 0 0 0 0-.708l-3-3zm.646 6.061L9.793 2.5 3.293 9H3.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.207l6.5-6.5zm-7.468 7.468A.5.5 0 0 1 6 13.5V13h-.5a.5.5 0 0 1-.5-.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.5-.5V10h-.5a.499.499 0 0 1-.175-.032l-.179.178a.5.5 0 0 0-.11.168l-2 5a.5.5 0 0 0 .65.65l5-2a.5.5 0 0 0 .168-.11l.178-.178z" />
                </svg> Update
                @if (Index == true)
                {


                    <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                    <span class="sr-only">Loading...</span>
                }
            </button>
       
    </div>

</EditForm>
</div>