@page "/ResetPassword/{uId}/{Token}"
@inherits ResetPasswordUserAccountComponentBase
@layout EmptyLayout

@if (ErrorMessage != null)
{
    <ErrorRoutingMessage Message="@ErrorMessage"></ErrorRoutingMessage>
}
@if (SuccessMessage != null)
{
    <CorrectRoutingMessage Message="@SuccessMessage"></CorrectRoutingMessage>
}





<div class=" vertical-center text-center">
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">

                <img class="mb-4" src="/LogoDawi.png" width="200">
                <EditForm Model="resetPasswordUserAccountDto">
                    <DataAnnotationsValidator></DataAnnotationsValidator>
                    <ValidationSummary></ValidationSummary>
                <div class="form-floating">
                    <input type="password" class="form-control" id="floatingInput" @bind="resetPasswordUserAccountDto.Password" placeholder="Password"></input>
                    <label for="floatingInput">Password</label>
                </div>
                <div class="form-floating">
                    <input type="password" class="form-control" id="floatingInput" @bind="resetPasswordUserAccountDto.ConfirmePassword" placeholder="Confirme Password"></input>
                    <label for="floatingInput">Confirme Password</label>
                </div>
                <button @onclick="OnUpdatePassword" class=" w-100 btn btn-primary mb-3">Validate</button>

                </EditForm>

            </div>
        </div>
    </div>
</div>
@if (IsLoading == true)
{
    <WaitComponent />
}
