@page "/InvitationWork"
@inherits InvitationWorkComponentBase

@if (ErrorMessage != null)
{
    <ErrorRoutingMessage Message="@ErrorMessage"></ErrorRoutingMessage>
}

<div class="shadow-lg p-3 mb-5 bg-light rounded">
<table class="table caption-top">
        <caption>List Invitation</caption>
    <thead>
        <tr>
            <th scope="col">Name Cabinet</th>
            <th scope="col">Date Invitation</th>
                <th scope="col">Address</th>
            <th scope="col">Services</th>
            <th scope="col">Accept Invitation</th>
            <th scope="col">Refuse Invitation</th>
          

        </tr>
    </thead>
   
    <tbody>
        @foreach(var item in invitationsDoctorDtos){

       
         <tr>
            <td>@item.NameCabinet</td>
       
            <td>@item.DateInvitation</td>
       
            <td>@item.adress</td>
       
            <td>@item.Services</td>
      
                <td>
                    <button @onclick="() => OnRefuse(item.Id)" class="btn btn-danger">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                                <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8 2.146 2.854Z" />
                            </svg>Refuse
                        @if (IndexRefuse == item.Id)
                        {


                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            <span class="sr-only">Loading...</span>
                        }
                    </button>
                </td>
      
                <td>
                    <button @onclick="() => OnAccept(item.Id)" class="btn btn-success">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check2" viewBox="0 0 16 16">
                                <path d="M13.854 3.646a.5.5 0 0 1 0 .708l-7 7a.5.5 0 0 1-.708 0l-3.5-3.5a.5.5 0 1 1 .708-.708L6.5 10.293l6.646-6.647a.5.5 0 0 1 .708 0z" />
                            </svg> Accepted
                        @if (IndexAccepte == item.Id)
                        {


                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            <span class="sr-only">Loading...</span>
                        }
                    </button>
                </td>
        </tr>
        }
    </tbody>
   </table>
   </div>
 
@if (IsLoding)
{
    <WaitComponent></WaitComponent>

}